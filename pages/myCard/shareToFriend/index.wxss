page {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  
}
cover-view{
  white-space: normal !important;
}
.container{
  position: aboulte;
  z-index: 10;
  top:0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #fff
}

.createCard {
  position: absolute;
  z-index: -1;
  /* width: 100vw;
  height: 100vh; */
  
  width: 750px;
  height: 1334px;
  background-color: #fff;
  overflow-x: hidden;
}


.title {
  width:90%;
  margin: 0 auto;
  /* margin: 40rpx 40rpx; */
  font-size: 30rpx;
  color: #222222;
  padding-bottom: 30rpx;
  height: 105rpx;
}

.picture-selector {
  padding: 20rpx;
  width: unset;
  flex: 1;
}

.picture-container {
  position: relative;
  width: 32%;
  padding: 5rpx;
  height: 230rpx;
  float: left;
}

.picture-container>image {
  width: 100%;
  height: 100%;
}

.img {
  width: 375rpx;
  height: 668rpx;
  margin-top: 30rpx;
}

.imgBox {
  width: 100%;
  height: 700rpx;
  display: flex;
  justify-content: center;
}

.imgBox.multiMode {
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.imgBox.multiMode>view {
  width: 32%;
  padding-left: 10rpx;
  padding-top: 10rpx;
}

.img-multiple {
  width: 100%;
  height: 200rpx;
  /* margin-left: ; */
  /* margin-top: 20px; */
}

.saveBtn {
  margin: 0 auto;
  margin-top: 176rpx;
  margin-bottom: 22rpx;
  width: 590rpx;
  height: 100rpx;
  background-color: rgb(245, 94, 80);
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  line-height: 100rpx;
  border-radius: 50rpx;
}

.tip {
  margin: 0 auto;
  font-size: 24rpx;
  color: #999999;

}

.centerView {
  width: 100%;
  height: 80rpx;
  margin-bottom: 20rpx;
  text-align: center;
}