::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page {
  background-color: rgb(245, 245, 245);
}

.page-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.personInfo,
.demo,
.chooseCover,
.willSeeCard {
  border: 1rpx solid #eee;
  background-color: #fff;
  width: 99%;
  height: 130rpx;
  line-height: 130rpx;
  font-size: 28rpx;
  color: #273e31;
  padding-left: 0 !important;
}

text {
  margin-left: 30rpx;
}

.demo {
  height: 100rpx;
  border-top: none;
  border-bottom: none;
  line-height: 100rpx;
}

.demo .toRight,
.chooseCover .toRight {
  padding-top: 40rpx;
}

.chooseCover {
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
  border-top: none;
}

.willSeeCard {
  height: 100rpx;
  line-height: 100rpx;
  border-top: none;
  border-bottom: none;
}

.headerImg {
  width: 98rpx;
  height: 98rpx;
  float: right;
  margin-right: 11px;
  margin-top: 8px;
  border-radius: 100%;
}

.toRight {
  width: 14rpx;
  height: 20rpx;
  float: right;
  padding-right: 60rpx;
  padding-top: 55rpx;
}

.willSeeArea {
  padding-top: 40rpx;
  display: flex;
  width: 100%;
  height: 620rpx;
  background-color: #fff;
}

.myCardImg,
.myCardImg_h5 {
  width: 330rpx;
  height: 590rpx;
  padding-left: 30rpx;
}

.myCardImgBox {
  position: relative;
}

.cardModal {
  position: absolute;
  /* z-index: 10; */
  width: 285rpx;
  height: 99rpx;
  bottom: 46rpx;
  right: 22rpx;

}

.introduce {
  width: 100%;
  height: 120rpx;
  text-align: center;
  background-color: #fff
}

.introduce view {
  float: left;
  width: 50%;
  font-size: 28rpx;
  color: #27313e;
  background-color: #fff;
  margin-top: 10px;

}


.iSpin {
  background-color: #fff;
}