<!--pages/myCard/cardInfo/index.wxml-->
<view class="cardInfo">
	<form bindsubmit="submit" bindreset="submit">
		<view class="headContainer" bindtap="updataHeadImg">
			<view class="box">
				<view>
					头像
				</view>
				<image src="{{submitData.avatar ? submitData.avatar : '/static/img/id_card_front.png'}}" />
			</view>
			<view class="line" />
		</view>
		<i-input
		 value="{{submitData.org}}"
		 name="org"
		 title="所属机构"
		 maxlength="50"
		 autofocus
		 placeholder="请输入所属机构"
		/>
		<i-input
		 value="{{submitData.name}}"
		 name="name"
		 title="姓名"
		 maxlength="50"
		 placeholder="请输入姓名"
		/>
		<i-input
		 value="{{submitData.title}}"
		 name="title"
		 title="职位"
		 maxlength="50"
		 placeholder="请输入职位"
		/>
		<i-input
		 value="{{submitData.tel}}"
		 name="tel"
		 title="手机号"
		 type="number"
		 maxlength="50"
		 placeholder="请输入手机号"
		/>
		<i-input
		 value="{{submitData.wxid}}"
		 name="wxid"
		 title="微信号"
		 maxlength="50"
		 placeholder="请输入微信号"
		/>
		<i-input
		 value="{{submitData.address}}"
		 name="address"
		 title="公司地址"
		 maxlength="50"
		 placeholder="请输入公司地址"
		/>
		<i-input
		 value="{{submitData.intro}}"
		 bindblur="introChange"
		 wx:if="{{!selectShow}}"
		 name="intro"
		 title="简介"
		 type="textarea"
		 maxlength="100"
		 placeholder="请输入简介（最多100字）"
		/>
		<i-panel title="选择">
			<i-cell-group i-class="sleColor">
				<i-cell
				 title="选择推荐素材"
				 is-link
				 bindtap="selectElement"
				 data-target="articleInfo"
				 label="{{submitData.articleInfo.title}}"
				/>
				<i-cell
				 title="选择推荐项目"
				 is-link
				 bindtap="selectElement"
				 data-target="productInfo"
				 label="{{submitData.productInfo.name}}"
				/>
				<i-cell
				 title="选择推荐医生"
				 is-link
				 bindtap="selectElement"
				 data-target="doctorInfo"
				 label="{{submitData.doctorInfo.name}}"
				/>
			</i-cell-group>
		</i-panel>
		<button class="serveButton" form-type="submit">保存</button>
	</form>
</view>

<global-select wx:if="{{selectShow}}" type="{{selectType}}" bindchange="selectHandle" />

<i-message id="message" />

