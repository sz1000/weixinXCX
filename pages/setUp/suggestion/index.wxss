page {
  font-family: "PingFang-SC-Medium"
}

.headBox,
.feedBox {
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  display: flex;
  justify-content: flex-start;
}

.blueBox {
  margin: 53rpx 12rpx 49rpx 31rpx;
  background: linear-gradient(to right, #5297FC, #5B6FF9);
  width: 6rpx;
  height: 28rpx;
}

.title {
  font-size: 30rpx;
  color: #222222;
  letter-spacing: 1rpx;
  font-weight: bold
}

.questionBox {
  margin: 0 auto;
  /* width: 90%; */
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #27313E;
}

.feedBox {
  height: 96rpx;
  line-height: 96rpx;
  border: none;
}

.feedBox .blueBox {
  margin-top: 35rpx;
}

.textBox {
  padding-top: 33rpx;
  margin: 0 auto;
  width: 686rpx;
  height: 300rpx;
  background-color: #F5F5F5;
  border-radius: 6rpx;
}

.textArea {
  margin-top: 33rpx;
  margin-left: 31rpx;
  height: 200rpx;
}

.phclass {
  font-size: 30rpx;
  color: #999999;
}

.count {
  margin: 10rpx 30rpx;
  float: right;
  color: #999999;
  font-size: 24rpx;

}

.submitBtn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  background-color: rgb(204, 204, 204);
  text-align: center;
  line-height: 94rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  letter-spacing: 1px;
}