/* pages/project/groupBuyingList/components/group-buying-item/index.wxss */

.item-container {
    width: 340rpx;
    height: 550rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 6rpx;
    overflow: hidden;
}

.img-container {
    width: 340rpx;
    height: 340rpx;
    position: relative;
}

.main-img {
    width: 340rpx;
    height: 340rpx;
    background: #999999;
}

.countdown {
    width: 340rpx;
    height: 50rpx;
    background: rgba(0, 0, 0, .2);

    display: flex;
    justify-content: center;
    align-items: center;

    position: absolute;
    z-index: 100;
    bottom: 0px;
    left: 0px;

    color: #ffffff;
    font-size: 22rpx;
    font-weight: 400;
    line-height: 50rpx;
    text-align: center;
    color: rgba(255, 255, 255, 1);
    text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.5);
}

.item-title {
    height: 72rpx;

    font-size: 26rpx;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;

    margin: 20rpx 12rpx;
}

.price-container {
    margin: 0 12rpx;
}

.peopel {
    width: 84rpx;
    height: 34rpx;
    background: #FF3B30;
    border-radius: 6rpx;
    overflow: hidden;
    display: inline-block;

    color: #ffffff;
    font-size: 22rpx;
    line-height: 34rpx;
    text-align: center;
    font-weight: 400;

    margin-right: 16rpx;
}

.price {
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(255, 59, 48, 1);
    margin-right: 16rpx;
}

.price-through {
    font-size: 22rpx;
    font-weight: 400;
    color: rgba(187, 187, 187, 1);
    text-decoration:line-through;
}

.peopel-count {
    padding: 12rpx 12rpx 0rpx 0;

    font-size: 22rpx;
    text-align: end;
    font-weight: 400;
    color: rgba(187, 187, 187, 1);
}