/* pages/project/groupBuyingDtaile/components/group-buying-card/index.wxss */
.group-buying-card{
    width:656rpx;
    height:150rpx;
    border-radius:8rpx;
    margin: 30rpx auto;
    padding: 30rpx 24rpx;

    box-shadow: 0 0 4px #99999930;

    display: flex;
}

.content-img{
    width: 150rpx;
    height: 150rpx;
    border-radius:4rpx;
    background: #999999;
    margin-right: 40rpx;
}

.content-container{
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.content-title{
   width:471rpx;

   font-size:26rpx;
   font-weight:400;
   color:rgba(34,34,34,1);
   line-height:38rpx;
   
   overflow:hidden;
   text-overflow:ellipsis;
   display:-webkit-box; 
   -webkit-box-orient:vertical;
   -webkit-line-clamp:2; 
}

.container-price{
    display: flex;
    align-items: flex-end;
}

.price-people {
    width: 84rpx;
    height: 34rpx;
    background: rgba(255, 59, 48, 1);
    border-radius: 4rpx;

    font-size: 22rpx;
    font-weight: 500;
    text-align: center;
    line-height: 34rpx;
    color: rgba(255, 255, 255, 1);

    margin-right: 20rpx;
}

.price-buy {
    display: flex;
    align-items: flex-end;

    font-size: 46rpx;
    line-height: 44rpx;
    font-weight: 500;
    color: rgba(255, 59, 48, 1);
    margin-right: 11rpx;
}

.price-buy i {
    font-size: 28rpx;
    line-height: 28rpx;
}

.price-line {
    font-size: 22rpx;
    font-weight: 500;
    text-decoration: line-through;
    color: rgba(170, 170, 170, 1);
}
