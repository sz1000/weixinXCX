.headimg-arr {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    margin: 48rpx 0;
}

.headimg-item {
    width: 106rpx;
    height: 106rpx;
    border-radius: 50%;
    overflow: hidden;
}

.headimg-box {
    width: 106rpx;
    height: 106rpx;
    margin: 10rpx 14rpx;
    position: relative;
}

.boss::after {
    content: '团长';
    display: block;
    width: 70rpx;
    height: 32rpx;
    border-radius: 16rpx;
    background: rgba(255, 59, 48, 1);

    text-align: center;
    font-size: 22rpx;
    color: #fff;
    line-height: 32rpx;

    position: absolute;
    z-index: 1000;
    top: 0px;
    right: -30rpx;
}

.surplusPeopel {
    height: 36rpx;

    padding-bottom: 50rpx;
    
    text-align: center;
    font-size: 34rpx;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
}

.countDown-container{
    display: flex;
    justify-content: center;
    
    font-size: 26rpx;
    font-weight:500;
    line-height: 42rpx;
    color: #333333;
    margin: 4rpx;

    padding-bottom: 68rpx;
}

.countDown{
    color: black;
    height: 42rpx;
    position: relative;
}

.countdown-count{
    width:42rpx;
    height: 42rpx;
    background: #333333;
    border-radius: 21rpx;
    
    margin: 0 8rpx;

    text-align: center;
    color: #fff;
    line-height: 42rpx;
}