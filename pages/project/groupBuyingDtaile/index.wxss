/* pages/project/groupBuyingDtaile/index.wxss */
.container-item:after {
    content: "";
    display: block;
    width: 100vw;
    height: 18rpx;
    background: #F8F8F8;
}

.submit-bar {
    width: 100vw;
    height: 96rpx;
    /* background: red; */

    position: fixed;
    bottom: 0px;
    left: 0px;
    z-index: 1000;
    box-shadow: 0 0 4px #99999930;
}

.submit-bar-start {
    display: flex;
    justify-content: space-between;
}

.price-symbol {
    color: #FF3B30;
    font-size: 22rpx;
    font-weight: 500;
    margin-left: 19rpx;
    margin-right: 8rpx;
    margin-bottom: -8rpx;
}

.submit-bar-start-price {
    width: 100%;
    height: 96rpx;

    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-right: 39rpx;

    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.button {
    width: 400rpx;
    height: 96rpx;
    border-radius: 0px;

    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(82, 151, 252, 1);

    font-size: 30rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    margin: 0;
}

.submit-bar-detaile {
    width: 100vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 48px;
}

.start-paying{
    font-size:28rpx;
    font-weight:400;
    color:#222222;
    padding: 30rpx;
    padding-bottom: 0px;
}

.message{
    bottom: 20vh;
}

.detal-btn{
    width: 50vw;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    font-weight: 400;
    text-align: center;
}

.status1{
    width: 100vw;
    background: rgba(82, 149, 252, 1);
    color: #ffffff !important;
}