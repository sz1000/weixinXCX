/* pages/project/projectDetail/components/group-buying-price/index.wxss */
.price-container {
    display: flex;
    align-items: flex-end;
}

.price-people {
    width: 84rpx;
    height: 34rpx;
    background: rgba(255, 59, 48, 1);
    border-radius: 4rpx;

    font-size: 22rpx;
    font-weight: 500;
    text-align: center;
    line-height: 34rpx;
    color: rgba(255, 255, 255, 1);

    margin-right: 20rpx;
}

.price-buy {
    display: flex;
    align-items: flex-end;

    font-size: 46rpx;
    line-height: 44rpx;
    font-weight: 500;
    color: rgba(255, 59, 48, 1);
    margin-right: 11rpx;
}

.price-buy i {
    font-size: 28rpx;
    line-height: 28rpx;
}

.price-line {
    font-size: 22rpx;
    font-weight: 500;
    text-decoration: line-through;
    color: rgba(170, 170, 170, 1);
}



.countdown-container{
    display: flex;

    color: #FF3B30;

    margin-top: 14rpx;
}

.count-style{
    color: #FF3B30;
}
.countdown-container-text{
    margin-right:  15rpx;
}

.group-buying-price{
    padding: 28rpx;
    padding-bottom: 0px;
}