.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.input-box.title {
  font-size: 38rpx;
  padding-bottom: 20rpx;
}

.input-box {
  text-align: left;
  padding: 0 20rpx;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eeeeee;
}

.picture-selector {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  width: unset;
}

.picture-container {
  position: relative;
  width: 32%;
  padding: 5rpx;
  height: 230rpx;
  float: left;
}

.picture-container>image {
  width: 100%;
  height: 100%;
}

.picture-container>image.closeImg {
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  right: 25rpx;
  top: 25rpx;
}

.btn-group {
  display: flex;
  flex-flow: row nowrap;
}

.btn-group button {
  width: 50%;
  border-radius: 0;
  font-size: 14px;
  height: 47px;
  line-height: 47px;

}

button.blue {
  color: #ffffff;
  background-color: #5297FC;
}

.editBtn {
  margin: 30rpx auto;
  width: 140rpx;
  height: 47rpx;
  background-color: #F5F5F5;
  border-radius: 27rpx;
  font-size: 22rpx;
  color: #999999;
  text-align: center;
  line-height: 47rpx;
}

.editBtn::after {
  content: '编辑'
}

.active {
  background-color: #5297FC;
  color: #ffffff;
}

.active::after {
  content: '完成'
}

.input-placeholder {
  font-size: 14px;
  text-align: left
}