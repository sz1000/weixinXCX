<template name="img">
    <image class="demoImg_item" src="{{item.content.imgUrl}}" mode="widthFix"></image>
    <view wx:if="{{item.content.text != null}}" class="demoText">{{item.content.text}}</view>
</template>

<!-- 文字 -->
<template name="text">
    <view wx:if="{{item.content.text != null}}" class="text">{{item.content.text}}</view>
</template>
