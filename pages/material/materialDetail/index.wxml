
<image src="{{demo.headImgUrl}}" mode="widthFix" class="topImg"/>
<view class="demoText" style="text-decoration: none">{{demo.headText}}</view>
<image src="{{demo.authorAvatarUrl}}" class="headerImg" />
<view class="infoContent">
    <view class="name">{{demo.authorName}}</view>
    <view class="time">{{demo.updateTime}}</view>
</view>
<view class="{{greyTitle}}">
    <text>{{demo.title}}</text>
</view>

<view wx:for="{{demo.content}}" wx:key="itemIndex" wx:for-item="item">
    <template is="{{item.type}}" data="{{item}}"></template>
</view>
<view style="width:100%;height:50rpx;"></view>
<view class="backBtnStyle" bindtap='goToHomePage' wx:if="{{showBackBtn}}">
    <image src="/static/icons/backHome.png"></image>
</view>
