/* pages/appointment/newAppointment/index.wxss */
.container{
  background: #F5F5F5;
}

page{
  background: #f5f5f5;
  margin-bottom: 20rpx;
}

.line{
  width: 100%;
  height: 1px;
  background: #eeeeee;
}

.date-container{
  height: 40px;
  display: flex;
  align-items: center;
}

.item{
  padding: 0 32rpx;
  margin-bottom: 20rpx;
  background: #fff;
  padding-bottom: 2px;
}

.item-head{
  padding-top:31rpx;
  display: flex;
  align-items: center;
  height:42rpx;
  font-size:34rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}

.item-head-icon{
  width:8rpx;
  height:32rpx;
  background:rgba(82,151,252,1);
  border-radius:4rpx;
  margin-right: 15rpx;
}

.input-item{
  display: flex;
  align-items: center;
  height: 121rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.textStyle{
  padding-top: 15rpx;
  height: 240rpx;
  font-size:28rpx;
  width: 100%;
  color: #999999;
  overflow: hidden;
}

.item-but-container{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 0;
}

.rudio-btn{
  width:156rpx;
  height:66rpx;
  border-radius:36rpx;
  border:1px solid #909399;
  font-size:30rpx;
  font-weight:400;
  line-height: 66rpx;
  text-align: center;
  color: #909399;
}

.rudio-btn-active{
  border:1px solid #5297FC;
  color: #5297FC;
}

.item-selected-serve{
  box-shadow:0px 0px 3px #33333310;
  border-radius: 4px;
  padding: 8px;
  margin-bottom: 12px;
}
.submitBtn{
  margin: 40px auto;
  width:300rpx;
  height:88rpx;
  background:rgba(82,151,252,1);
  border-radius:4rpx;
  color: #fff;
  font-size:32rpx;
  text-align: center;
  line-height: 88rpx;
  font-weight:400;
}