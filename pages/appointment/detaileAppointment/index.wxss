/* pages/appointment/detaileAppointment/index.wxss */

.head-hint {
  width: 100%;
  background: #5297FC;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400;
  color: #fff
}

.head-hint-icon {
  margin: 18rpx;
}

.detaile-container {
  margin: 81rpx 17rpx;
  box-shadow: 0 0 3px #33333310;
  border-radius: 8rpx;
  padding: 21rpx;
  padding-bottom:76rpx;
}


.detaile-title {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 50rpx;
  text-align: center;
  margin-top: 20rpx;
}

.detaile-item {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-bottom: #EEEEEE solid 1px;
  min-height: 117rpx;
}

.remark-container{
  align-items: flex-start;
  margin: 40rpx 0;
}
.remark{
  width: calc(100vw - 190rpx);
}
.detaile-item-head {
  width: 190rpx;
  color: #999999;
}

.aoppint{
  height: 326rpx;
  padding: 0 18rpx;
  margin-top: 42rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:70rpx;
}

.aoppint-bumber{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.aoppint-copy{
  font-size: 24rpx;
  color:rgba(82,149,252,1);
}

.line{
  width: 100%;
  height: 18rpx;
  background: #F8F8F8;
}

.handle-container{
  position: fixed;
  bottom:0;
  left: 0;
  width: 100vw;
  height:96rpx;
  box-shadow:0px 0px 5px 2px rgba(160,160,160,0.03);
  display: flex;
  justify-content:flex-end;
  align-items: center;
  font-size:28rpx;
  font-weight:400;
  color:rgba(82,149,252,1);
  line-height:70rpx;
  background: #fff;
}

 .baseButton{
  width:164rpx;
  height:52rpx;
  border:1px solid rgba(82,149,252,1);
  border-radius:26rpx;
  margin-right: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fullButton{
  background:rgba(82,151,252,1);
  color: #fff;
}

.detaile-serveContainer{
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  width: 100%;
  height: 220rpx;
  padding:35rpx 0rpx;
}

.detaile-serveContainer view{
  margin-bottom: 8px;
}