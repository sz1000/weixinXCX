<!--page/order-addPay/index.wxml-->
<!-- <form bindsubmit="submit" method="post"> -->
<i-message id="message" bind:cick="" handleWarning />

<view style="width:100%;overflow-x:hidden">
    <view class="addPay">
        <view class="addItems">
            <view class="addItem">
                消费项目<input type="text" style="color:#999999" data-name='payItem' bindblur="inputItem"
                    value='{{payItem}}' placeholder-style="color:#999999" placeholder="请输入消费项目" />
            </view>
            <view class="addItem">
                消费金额<input type="number" style="color:#999999" data-name='money' bindblur="inputItem" value='{{money}}'
                    placeholder-style="color:#999999" placeholder="请输入消费金额" />
            </view>
            <view class="addItem" style="width:100%;height:90rpx;">
                就诊时间<view class="section" style="display: flex;flex-direction: row;">
                    <view name="date">
                        <picker mode="date" value="date" start="2018-12-018" end="2060-09-01"
                            bindchange="bindDateChange" style="padding-left: 56rpx;color:#999999;">
                            <view>{{date}}</view>
                        </picker>
                    </view>
                    <view>
                        <view name="time" value='time'>
                            <picker mode="time" start="06:01" end="21:01" bindchange="bindTimeChange"
                                style="color:#999999">
                                <view style="margin-left:20rpx;">{{time}}</view>
                            </picker>

                        </view>
                    </view>

                </view>
            </view>
            <view style="margin:30rpx 0 32rpx 34rpx;color:#888888;font-size:28rpx;">上传凭证</view>
            <!--添加图片-->
            <view class="imgBox">
                <view class="weui-uploader__bd">
                    <view class="weui-uploader__files" id="uploaderFiles">
                        <block wx:for="{{files}}" wx:key="*this">
                            <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">

                                <image class="weui-uploader__img" src="{{item}}" mode="aspectFit" />


                            </view>
                        </block>
                    </view>
                    <!-- 添加图片 -->
                    <view class="weui-uploader__input-box addImg" bindtap="joinPicture" wx:if="{{show}}">
                    </view>
                </view>
            </view>
            <!-- <view bindtap="joinPicture" class="addImg">
        <image mode="aspectFit" src="../../static/img/addNew.png"></image>
    </view> -->
        </view>
        <view><button bindtap="submit">确认</button></view>
    </view>
</view>
<!-- </form> -->
<view class="backBtnStyle" bindtap='goToHomePage' wx:if="{{showBackBtn}}">
        <image src="/static/icons/backHome.png"></image>
</view>