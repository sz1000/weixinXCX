<!--pages/main/userInfo/userAddress/Index/index.wxml-->

<view class="content">
   <!-- 不需要收货地址放在第一位开始 -->
<view class="container_center" catch:tap="noAddress"wx-if="{{addressList.length}}">
   <view style="font-size:28rpx" >不需要收货地址</view>
</view>
<!-- 不需要收货地址放在第一位结束-->
	<view class="container" wx:for="{{addressList}}" wx:key="{{index}}" id="{{item.id}}" catch:tap="handleItem">
		<view class="container_left">
			<view>{{item.reciver}}</view>
			<view class="button tag" wx:if="{{item.status}}">默认</view>
		</view>
		<view class="container_right">
			<view class="item_title">{{item.tel}}</view>
			<view class="item_content">{{item.address[0]}},{{item.address[1]}},{{item.address[2]}} {{item.detail_address}}</view>
			<view class="item_footer">
				<view class="item_footer_item" id="{{item.id}}" catch:tap="handleDeleteItem">
					<i-icon type="trash" />
					删除
				</view>
				<view class="item_footer_item">|</view>
				<view class="item_footer_item" id="{{item.id}}" catch:tap="handlePutAddress">
					<i-icon type="editor" />
					编辑
				</view>
			</view>
		</view>
	</view>
     <!-- 不需要收货地址原型放在最后一位开始 -->
