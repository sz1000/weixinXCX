</view>
<view style="text-align: center;padding-top:55rpx;font-size=28rpx;" wx:if="{{!addressList.length}}">
	暂无地址
</view>

<view class="button_fill addAddress" bind:tap="handleToAddAddress">
	添加收货地址
</view>

