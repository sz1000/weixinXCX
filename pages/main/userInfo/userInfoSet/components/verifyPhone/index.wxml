<!-- pages/main/userInfo/userInfoSet/components/verifyPhone/index.wxml -->
<view class="mask">
	<view class="verify_container">
		<view class="input_item">
			<view>联系电话</view>
			<input
			 type="number"
			 value="{{tel}}"
			 bindinput="handleInputPhone"
			 placeholder="请输入联系电话"
			/>
		</view>
		<view class="input_item">
			<view>获取验证码</view>
			<view class="button" wx:if="{{countDown == 60}}" bind:tap="handleGetCode">获取验证码</view>
			<view wx:else>{{countDown}}</view>
		</view>
		<view class="input_item">
			<view>请输入验证码</view>
			<input
			 type="number"
			 value="{{code}}"
			 bindinput="handleInputNumber"
			 placeholder="请输入验证码"
			/>
		</view>
		<view class="button-container">
			<view class="button" bind:tap="handleHide">取消</view>
			<view class="button_fill" bind:tap="handleSubmit" style="height: 34rpx;line-height: 34rpx;">
				确定
			</view>
		</view>
	</view>
</view>

