/* pages/main/inquiry/index.wxss */
.select-contaienr{
    /* width: 100vw; */
    margin: 7px 0px;
    margin-left: 15px;
    display: flex;
    align-items: center;
    border: 0px solid #e9eaec;
    border-bottom-width: 0.5px;
}
.select-name{
    color: #495060;
    min-width: 65px;
    padding-right: 10px;
    line-height: 1.4;
    font-size: 14px;
}
.select-radio{
    width: 100%;
    display: flex;
}

.cell{
    color: #495060;
}

.row{
    display: flex;
    padding: 7px 0px;
    margin-left: 15px;
    border: 0px solid #e9eaec;
    border-bottom-width: 0.5px;
}

.row-title{
    color: #495060;
    min-width: 65px;
    padding-right: 10px;
    line-height: 1.4;
    font-size: 14px;
}

.row-content{
    color: rgb(135, 135, 135);
    font-size: 14px;
    position: relative;
}

.picker{
    width: 100%;
    height: 100%;
    background: red;
    position: absolute;
    z-index: 100;
    top:0px;
}

.code-container{
    color: #495060;
    padding-right: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.submitButton{ 
    background:rgba(82,151,252,1);
    color: #fff;
    height: 40px;
    line-height: 40px;
    width: 80%;
    margin: 0 auto;
}

.countDown{
    width: 100px;
    text-align: center;
}