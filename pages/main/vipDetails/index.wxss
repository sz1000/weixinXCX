/* pages/main/vipDetails/index.wxss */
.vip-details {
    position: relative;
}

.details-img {
    width: 750rpx;
    padding-bottom: 100px;
}

.name-text {
    position: absolute;
    z-index: 10;
    top: 240rpx;
    left: 63rpx;

    font-size: 24rpx;
    font-weight: 500;
    color: rgba(105, 89, 69, 1);
}

.join-button {
    position: fixed;
    bottom: 0;
    left: calc((100vw - 654rpx)/2);
    margin: 65rpx auto;

    width: 654rpx;
    height: 94rpx;
    background: linear-gradient(0deg, rgba(177, 152, 121, 1) 0%, rgba(235, 194, 159, 1) 99%);
    box-shadow: 0px 8px 13px 0px rgba(133, 115, 91, 0.27);
    border-radius: 47px;

    font-size: 34rpx;
    font-weight: 500;
    color: rgba(120, 72, 47, 1);
    line-height: 94rpx;
    text-align: center;
}

.price {
    font-size: 72rpx;
    font-weight: 500;
    color: rgba(99, 95, 88, 1);
    width:178rpx;
    position: absolute;
    top:140rpx;
    right: 67rpx;

    background: linear-gradient(45deg, rgba(122, 73, 47, 1) 0%, rgba(201, 125, 59, 1) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}