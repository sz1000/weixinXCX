}

.saler-title {
  margin: 32rpx auto;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(200, 167, 128, 1);
}

.saler-title::after {
  position: absolute;
  top:64rpx;
  left: 274rpx;
  content: '';
  width: 141rpx;
  height: 17rpx;
  background: linear-gradient(45deg, rgba(194, 161, 119, 0.6) 0%, rgba(230, 196, 166, 0) 99%);
  border-radius: 9rpx;
}

.saler-container {
  width: 693rpx;
  height: 630rpx;
  /* height: 740rpx; */
