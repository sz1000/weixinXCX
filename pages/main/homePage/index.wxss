.commonBox1 {
  overflow: hidden;
}

.item1{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.common-bar-left {
  display: flex;
  align-items: center;
}

.commonIcon {
  width: 8rpx;
  height: 30rpx;
  background: linear-gradient(0deg, rgba(194, 161, 119, 1) 0%, rgba(230, 196, 166, 1) 99%);
  border-radius: 14rpx;
  margin-right: 20rpx;
