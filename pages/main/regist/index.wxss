/* 遮罩层样式 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/* 弹出层样式 */
.registerBox {
  position: fixed;
  bottom: 15%;
  left: 0;
  right: 0;
  width: 90%;
  margin: auto;
  background-color: #fff;
  z-index: 2000;
  padding-top: 20rpx;
  border-radius: 6rpx;
}

.closeBtn {
  position: absolute;
  right: 32rpx;
  top: 30rpx;
  width: 30rpx;
  height: 30rpx;
}

