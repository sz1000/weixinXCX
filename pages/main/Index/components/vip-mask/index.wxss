/* pages/main/Index/components/vip-mask/index.wxss */
.vip-container{
    position: absolute;
    z-index: 1000;
    top:0px;
    left: 0px;

    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #00000080;
    
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.vip-card{
    width: 694rpx;
    height: 868rpx;
    position: relative;
}

.vip-price{
  position: absolute;
  z-index: 10;
  top:240rpx;
  width: 100%;
  margin-left: 26rpx;

  text-align: center;
  font-size: 89rpx;
  font-weight: 500;
  color: #fff;
}

.vip-price span{
  font-size: 36rpx;
  font-weight: 500;
  margin-right: -20rpx;
}

.vip-gift{
  position: absolute;
  z-index: 10;
  top:416rpx;
  width: 100%;
  text-align: center;

  font-size:24rpx;
  margin-left: 24rpx;
  color:  #6D5E4C;
}
.button{
    position: absolute;
    top:60vh;

    width:380rpx;
    height:80rpx;
    margin-left: 4vw;
    background:linear-gradient(0deg,rgba(177,152,121,1) 0%,rgba(235,194,159,1) 99%);
    box-shadow:0px 10rpx 40rpx 0px rgba(0, 0, 0, 0.2);
    border-radius:40rpx;

    text-align: center;
    font-size:30rpx;
    font-weight:500;
    color:rgba(120,72,47,1);
    line-height:80rpx;

    animation-name: pulse;
    animation-iteration-count:infinite;
    animation-duration:2s;
}


@keyframes pulse {
from {
  transform: scale3d(1, 1, 1);
}

50% {
  transform: scale3d(1.1, 1.1, 1.1);
}

to {
  transform: scale3d(1, 1, 1);
}
}