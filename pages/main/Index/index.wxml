<!-- 有销售ID但不是销售的跳转浮层 -->
<view class="commodity_screen" wx:if="{{becomeSaler}}" bindtap="closeModal" />
<i-modal
 title="成为销售"
 visible="{{becomeSaler}}"
 bindtap="beSaler"
 show-cancel="{{false}}"
 actions="{{attribute}}"
>
	<image style="width:100rpx;height:100rpx;" src="../../../static/img/logo.png" />
	<view>成为可叮销售,用双手成就</view>
	<view>你的梦想</view>
</i-modal>

<vip-mask bind:show="handleCloseVipMask" wx:if="{{vipMaskShow}}" />

<!-- 医生模板 -->
<template name="docOne">
	<view
	 class="doctorInfoOne"
	 data-item="{{item}}"
	 data-bindid="{{item.bindId}}"
	 bindtap="goDetail"
	>
		<image class="docHeadOne" src="{{item.avatar}}" mode="aspectFill" />
		<view class="docListOne">
			<p class="docName">
				{{item.name}}
				<span class="docJob">{{item.title}}</span>
			</p>
			<p class="docJob">{{item.hospital}}</p>
		</view>
	</view>
</template>
<template name="docTwo">
	<view
	 class="doctorInfoBox"
	 data-item="{{item}}"
	 data-bindid="{{item.bindId}}"
	 bindtap="goDetail"
	>
		<view class="docHeadPic">
			<image class="docHeadImg" src="{{item.avatar}}" mode="aspectFill" />
		</view>
		<view class="docInfo">
			<p class="docName">
				{{item.name}}
				<span class="docJob">{{item.title}}</span>
			</p>
			<p class="docJob">{{item.hospital}}</p>
		</view>
	</view>
</template>

