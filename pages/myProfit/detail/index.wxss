/* pages/myProfit/detail/index.wxss */
.img-icon{
    width: 26rpx;
    height: 31rpx;
    margin-right: 12rpx;
}

.text-bg{
    color: #ffffff;
    font-size:22rpx;
    padding: 8rpx 17rpx;
    border-radius:4rpx;
    background:linear-gradient(133deg,rgba(230,196,166,1) 0%,rgba(194,161,119,1) 100%);
}
.text-bg-d{
    background: #D8D8D8;
}

.number{
    color: #F35B5B;
}

.head{
    height: 230rpx;
    overflow: hidden;
    background:linear-gradient(133deg,rgba(230,196,166,1) 0%,rgba(194,161,119,1) 100%);
}

.time-select {
    margin-left: 30rpx;
    margin-top: 32rpx;
    margin-bottom: 32rpx;

    color: #606266;
    font-size: 34rpx;
    overflow: hidden;
}

.count-container{
    display: flex;
    justify-content: space-around;
    align-items: center;
    color:  #ffffff;
    font-size:28rpx;
    text-align: center;
    margin: 0 40rpx;
}

.count-item view:first-child{
    padding-bottom: 11rpx;
}

.parting-line{
    width:1px;
    height:30rpx;
    background: rgba(255, 255, 255, 0.3)
}

.list-container{
    min-height: calc(100vh - 230rpx);
    background: #F5F7FA;
    padding: 30rpx;
}

.list-item{
    background: #ffffff;
    padding: 25rpx 29rpx;
    border-radius:10rpx;
    margin-bottom: 30rpx;
}

.item-head{
    display: flex;
    justify-content: space-between;
    padding-bottom: 24rpx;
    border-bottom: 1px solid #EDEFF2
}

.item-head-left{
    font-size:28rpx;
    color: #303133;
    font-weight:bold;
    line-height: 31rpx;
    
    display: flex;
    align-items: center;
}

.item-content{
    margin: 26rpx 0;
    display: flex;
    justify-content: space-between;
}

.item-content-left{
    font-size:24rpx;
    font-weight: 400;
    color: #606266;
}
.item-content-left view{
    margin-bottom: 12rpx;
}

.item-content-right{
    font-size: 34rpx;
}

.footer{
    display: flex;
    font-size: 26rpx;
    font-weight: 400;
}
.footer view{
    margin-right: 30rpx;
}
