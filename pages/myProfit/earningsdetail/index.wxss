.count-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  margin: 0 40rpx;
}


.count-item view:first-child {
  padding-bottom: 11rpx;
}

.parting-line {
  width: 1px;
  height: 30rpx;
  background: rgba(255, 255, 255, 0.3);
}

.list-container {
  min-height: calc(100vh - 230rpx);
  background: #f5f7fa;
  padding: 30rpx;
}

.list-content {
  margin: 20rpx auto;
  background: #fff;
}

.list-top {
  display: flex;
  margin: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  flex-direction: row;
  justify-content: space-between;
}

.order-id {
  display: flex;
  align-items: center;
}

.no-pay {
  display: flex;
  align-items: center;
  color: #fff;
  /* background: #f35b5b; */
  background:linear-gradient(141deg,rgba(255,151,127,1) 0%,rgba(232,101,74,1) 100%);
  font-size: 20rpx;
  margin: 20rpx 0;
  padding: 0 10rpx;
  border-radius: 10%;
}

.list-bottom {
  color: #666;
  overflow: hidden;
}

.order-type {
  display: flex;
  margin: 0 30rpx;
  line-height: 80rpx;
  flex-direction: row;
  justify-content: space-between;
}

.order-num {
  margin: 0 30rpx;
  line-height: 60rpx;

}

.price {
  color:rgba(255,58,38,1);
}

.time {
  margin: 0 30rpx;
  line-height: 60rpx;
 
}

.list-item {
  background: #fff;
  padding: 25rpx 29rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.item-head {
  display: flex;
  justify-content: space-between;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #edeff2;
}

.item-head-left {
  font-size: 28rpx;
  color: #303133;
  font-weight: bold;
  line-height: 31rpx;
  display: flex;
  align-items: center;
}

.item-content {
  margin: 26rpx 0;
  display: flex;
  justify-content: space-between;
}

.item-content-left {
  font-size: 24rpx;
  font-weight: 400;
  color: #606266;
}

.item-content-left view {
  margin-bottom: 12rpx;
}

.item-content-right {
  font-size: 34rpx;
}

.footer {
  display: flex;
  font-size: 26rpx;
  font-weight: 400;
}

.footer view {
  margin-right: 30rpx;
}
