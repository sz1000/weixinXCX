/* 遮罩层样式 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #00000040;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.loginBox {
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  width: 90%;
  height: 940rpx;
  margin: auto;
  background-color: #fff;
  z-index: 2000;
  padding-top: 20rpx;
  border-radius: 6rpx;
}

.firstText {
  font-size: 60rpx;
  font-weight: 600;
}

.loginText {
  margin-top: 80rpx;
  margin-left: 72rpx;
  color: #222222;
  margin-bottom: 28rpx;
  font-size: 32rpx;
}

.loginText text {
  position: relative;
  display: block;
  margin-top: 20rpx;
}

.loginButton {
  display: flex;
  justify-content: center;
  align-items: Center;
  position: absolute;
  left: 72rpx;
  bottom: 80rpx;
  width: 80%;
  height: 100rpx;
  align-self: center;
  /*flex水平居中*/
  background: #333333;
  color: #fff;
  font-size: 32rpx;
  border-radius: 48rpx;
  letter-spacing: 10rpx;
}

.loginButton image {
  width: 58rpx;
  height: 48rpx;
}

.RightBox {
  display: inline-flex;
  justify-content: flex-end;
  background-color: antiquewhite;
  width: 100%;
  position: absolute;
  margin: 100px;
}

.weben {
  margin-top: 2px solid red;
}