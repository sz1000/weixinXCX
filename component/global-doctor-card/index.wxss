/* component/global-doctor-card/index.wxss */
.container {
  width: 100%;
  display: flex;
}

image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
  overflow: hidden;
}

.content {
  margin-left: 33rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 34rpx;
  margin-right:  29rpx;
}

.title{

font-size:24rpx;
font-weight:400;
color:rgba(119,119,119,1);
line-height:60rpx;
}

.hospital{
font-size:26rpx;
font-weight:400;
color:rgba(119,119,119,1);
line-height:60rpx;
}

.tagBox{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.tagBox span{
  margin-top: 4px;
  padding: 4rpx 10rpx;
  border: 1px solid #5295FC;
  border-radius: 6rpx;
  color: #5295FC;
  font-size: 22rpx;
  margin-right: 28rpx;
}