/* component/global-prodact-card/index.wxss */
.projectBox {
  width: 100%;
  display: flex;
}


.leftImg image {
  width: 200rpx;
  height: 200rpx;
}

.rightContentBox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 29rpx;
  width: 456rpx;
}

.projectTitle {
  /* width: 480px; */
  width: fit-content;
  /* height: 80rpx; */
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  line-height: 40rpx;
  letter-spacing: 3rpx;
}

.porjectPriceBox {
  /* height: 50rpx; */
  display: flex;
  margin-top: 8rpx;
  align-items: center;
  justify-content: space-between;
}

.priceBox {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center
}

.onSalePrice {
  display: inline-block;
  color: #FF3B30;
  font-size: 36rpx;
}

.oriPrice {
  font-size: 22rpx;
  color: #00000016;
  font-weight: 400;
  margin-left: 13rpx;
  text-decoration: line-through;
}

.onSale {
  color: #ffffff;
  background-color: #ff3B30;
  width: 96rpx;
  height: 26rpx;
  font-size: 18rpx;
  text-align: center;
  border-radius: 22rpx;
  margin-left: 16rpx;
}

.saleNum {
  color: #888888;
  font-size: 20rpx;
  /* margin-left: 28%; */
}

.appointPriceBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.appointPriceBox span {
  color: #888888;
  font-size: 22rpx;
}

.appointPrice {
  width: fit-content;
  margin-top: 11rpx;
  height: 36rpx;
  color: #F55419;
  background-color: #E95A2732;
  font-size: 22rpx;
  padding: 0 12rpx;
  border-radius: 8rpx;
}

.noListData {
  margin-top: 500rpx;
  text-align: center;
  font-size: 28rpx;
  color: #777777;
}


.noCategory {
  font-size: 28rpx;
  color: #777777;
  text-align: center;
  position: relative;
  top: 50%;
}

.i-load {
  margin-bottom: 100rpx;
}
.titleBold {
  font-size: 15px;
  font-weight: 500;
  line-height: 26px;
  color: #333333;
  letter-spacing: 2rpx;
  text-align: left;
}

.ellipsisTwo {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.groupBuying-container{
  display: flex;
  align-items: center;
}

.groupBuying-icon{
  width:84rpx;
  height:34rpx;
  background:rgba(255,59,48,1);
  border-radius:4rpx;
  margin-right: 25rpx;

  color: #fff;
  line-height: 34rpx;
  text-align: center;
}

.groupBuying-pay-price{
font-size:34rpx;
font-weight:500;
color:rgba(255,59,48,1);
}

.groupBuying-buy-price{
font-size:26rpx;
font-weight:400;
color:rgba(187,187,187,1);
}